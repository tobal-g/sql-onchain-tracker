# ============================================
# ZAPPER API (Required for portfolio queries)
# ============================================
ZAPPER_API_KEY=xxxx

# ============================================
# DATABASE (Neon.tech PostgreSQL)
# ============================================
# Required for sync and manual entry features
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# Database schema (optional, default 'public')
DATABASE_SCHEMA=public

# ============================================
# JWT AUTHENTICATION (Optional)
# ============================================
# Bcrypt hash of password for frontend login
# Generate with: node -e "console.log(require('bcrypt').hashSync('your-password', 10))"
# If not set, authentication is DISABLED (development mode)
AUTH_PASSWORD_HASH=

# JWT secret for signing tokens (optional, defaults to dev secret)
JWT_SECRET=your-secret-key-here

# JWT token expiry times (optional)
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# API KEY AUTHENTICATION (Optional)
# ============================================
# API key for sync endpoint authentication
# Sync endpoints accept EITHER JWT Bearer token OR x-api-key header
SYNC_API_KEY=your-secret-api-key-here

# ============================================
# ZERION API (Optional)
# ============================================
# API key for Zerion (base64 encoded) - fallback price source
# Used for tokens Zapper can't track (e.g., SKY token)
ZERION_API_KEY=your_zerion_api_key_base64

# ============================================
# SERVER CONFIGURATION (Optional)
# ============================================
# Server port (default 3000)
PORT=3000

# CORS origin for frontend (default 'http://localhost:5173')
CORS_ORIGIN=http://localhost:5173

# Cache TTL in seconds (default 90)
CACHE_TTL=90

# Rate limiting between wallet syncs in milliseconds (default 1000)
SYNC_RATE_LIMIT_MS=1000